---
import { Icon } from "@astrojs/starlight/components";
import type { StarlightIcon } from "@astrojs/starlight/types";
import type { HTMLAttributes } from "astro/types";

interface Props extends Omit<HTMLAttributes<"a">, "title"> {
  title: string;
  description?: string;
  icon?: StarlightIcon;
}

const { title, description, icon, ...attributes } = Astro.props;
---

<div class="nice-link-card">
  <span class="sl-flex stack">
    <a {...attributes}>
      <span class="title" set:html={title} />
    </a>
    {description && <span class="description" set:html={description} />}
  </span>
  {icon && <Icon name={icon} class="icon" size="1.333em" />}
</div>

<style>
  @layer starlight.components {
    .nice-link-card {
      display: grid;
      grid-template-columns: 1fr auto;
      gap: 0.5rem;
      background-color: var(--sl-color-gray-7);
      border-radius: 0.5rem;
      padding: 1rem;
      position: relative;
    }

    a {
      text-decoration: none;
      line-height: var(--sl-line-height-headings);
    }

    /* a11y fix for https://github.com/withastro/starlight/issues/487 */
    a::before {
      content: "";
      position: absolute;
      inset: 0;
    }

    .stack {
      flex-direction: column;
      gap: 0.5rem;
    }

    .title {
      color: var(--sl-color-white);
      font-weight: 600;
      font-size: var(--sl-text-lg);
    }

    .description {
      color: var(--sl-color-gray-3);
      line-height: 1.5;
    }

    .icon {
      color: var(--sl-color-gray-3);
    }

    /* Hover state */
    .nice-link-card:hover {
      background-color: var(--sl-color-accent-low);
      box-shadow: var(--sl-shadow-medium);
    }

    .nice-link-card:hover .icon {
      color: var(--sl-color-white);
    }
  }
</style>
